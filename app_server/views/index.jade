extends layout

block content
  div
    h1= title
    p #{message} #{title}
    p #{user}
    p #{currMood}
    <!--p #{response_userid}
    p Request #{req}
    p ResponseDoodle #{res}-->
    
    div.container
      div
        form.form-horizontal(action="", method="post", role="form", id="addMood")
          input(type="hidden", value=currMood, id="cm")
          .form-group  
              .input-prepend.input-append
              
                select(data-style="btn-info", name="label", id="moodChoices").pull-left
                  optgroup(label="Select Mood")
                    each name, ix in moodMap
                      option(hex=name.colorHex, fonthex=name.fontHex, lab=name.label)= name.label                          
          button.btn.btn-default.pull-left Submit Mood    
    div.container
      h3 Comments
      .row
        .row.list-group
          each com in moodComments
            .list-group-item
              p= com.comment 
              p= com.postedBy
          
